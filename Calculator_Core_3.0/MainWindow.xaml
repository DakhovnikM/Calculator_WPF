<Window x:Class="Calculator_Core_3._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_Core_3._0"
        mc:Ignorable="d"
        Title="Калькулятор" Height="456" Width="367" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Height="430" HorizontalAlignment="Left" Width="360">
        <Button Name="ButtonChangeSign" Content="+/-" HorizontalAlignment="Left" Margin="2,375,0,0" Width="90" Click="Button_ChangeSign_Click" FontSize="25" Height="45" VerticalAlignment="Top" />
        <Button Name="Button0" Content="0" HorizontalAlignment="Left" Margin="97,375,0,0" Width="90" Click="Button_0_Click" FontSize="25" Height="45" VerticalAlignment="Top"/>
        <Button Name="Button8" Content="8" HorizontalAlignment="Left" Margin="97,225,0,0" Width="90" Click="Button_8_Click" FontSize="25" Height="45" 
                VerticalAlignment="Top"/>
        <Button Name="Button5" Content="5" HorizontalAlignment="Left" Margin="97,275,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_5_Click" FontSize="25"/>
        <Button Name="Button2" Content="2" HorizontalAlignment="Left" Margin="97,325,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_2_Click" FontSize="25"/>
        <Button Name="ButtonReset" Content="С" HorizontalAlignment="Left" Margin="2,180,0,0" 
                VerticalAlignment="Top" Width="184" Height="40" Click="Button_Reset_Click" FontSize="25"/>
        <Button Name="Button7" Content="7" HorizontalAlignment="Left" Margin="2,225,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_7_Click" FontSize="25"/>
        <Button Name="Button4" Content="4" HorizontalAlignment="Left" Margin="2,275,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_4_Click" FontSize="25"/>
        <Button Name="Button1" Content="1" HorizontalAlignment="Left" Margin="2,325,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_1_Click" FontSize="25"/>
        <Button Name="ButtonPoint" Content="," HorizontalAlignment="Left" Margin="192,375,0,0" Width="90" Click="Button_Point_Click" FontSize="25" Height="45" VerticalAlignment="Top"/>
        <Button Name="Button3" Content="3" HorizontalAlignment="Left" Margin="192,325,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_3_Click" FontSize="25"/>
        <Button Name="Button6" Content="6" HorizontalAlignment="Left" Margin="192,275,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_6_Click" FontSize="25"/>
        <Button Name="Button9" Content="9" HorizontalAlignment="Left" Margin="192,225,0,0" 
                VerticalAlignment="Top" Width="90" Height="45" Click="Button_9_Click" FontSize="25"/>
        <Button Name="ButtonCorrect" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="191,180,0,0" 
                VerticalAlignment="Top" Width="90" Height="40" Click="ButtonCorrect_Click" FontSize="25"/>
        <Button Name="ButtonDiv" Content="/" Margin="286,180,0,0" 
                VerticalAlignment="Top" Height="40" Click="Button_Division_Click" FontSize="25" HorizontalAlignment="Left" Width="71"/>
        <Button Name="ButtonEquals" Content="=" Margin="286,375,0,0" 
                VerticalAlignment="Top" Height="45" Click="Button_Equals_Click" FontSize="25" HorizontalAlignment="Left" Width="71"/>
        <Button Name="ButtonAdd" Content="+" Margin="286,325,0,0" 
                VerticalAlignment="Top" Height="45" Click="Button_Addition_Click" FontSize="25" HorizontalAlignment="Left" Width="71"/>
        <Button Name="ButtonSub" Content="-" Margin="286,225,0,0" VerticalAlignment="Top" 
                Height="45" Click="Button_Subtraction_Click" FontSize="25" HorizontalAlignment="Left" Width="71"/>
        <Button Name="ButtonMul" Content="*" Margin="286,275,0,0" 
                VerticalAlignment="Top" Height="45" Click="Button_Multiplication_Click" FontSize="25" RenderTransformOrigin="0.012,0.512" HorizontalAlignment="Left" Width="71"/>
        <TextBox Name="TextBox" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="110" Margin="2,10,0,0" TextWrapping="Wrap" Text="TextBox" 
                VerticalAlignment="Top" FontSize="40" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="355"/>
        <TextBlock Name="TextBlock" Margin="0,18,0,0" Text="TextBlock" TextWrapping="Wrap" TextAlignment="Right" VerticalAlignment="Top" HorizontalAlignment="Center" Width="340"/>
    </Grid>
</Window>
